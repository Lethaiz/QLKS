@using QLKS.Models
@{
    ViewBag.Title = "Thanhtoan";
    Layout = "~/Views/Shared/LayoutDH.cshtml";
}

<h2 style="padding-top:1000px">THÔNG TIN GIỎ HÀNG</h2>
<table align="center" border="1">
    <tr style="text-align:center; font-weight:bold">
        <td>  Mã sách </td>
        <td> Tên sách </td>
        <td> Ảnh bìa </td>
        <td> Số lượng </td>
        <td> Đơn giá </td>
        <td> Thành tiền </td>
        <td width="50px"></td>
        <td width="50px"></td>
        <td width="50px"></td>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="text-align:center; font-weight:bold">
            <td> @item.iMaPhong </td>
            <td> @item.iSoPhong</td>
            <td><img src="~/Content/img/@item.sANH" width="150" height="150"></td>
            @using (Html.BeginForm("CapnhatGiohang", "Giohang", new { @iMaPhong = item.iMaPhong }))
            {
                <td>
                    <input type="number" min="1" name="txtSoluong" value="@item.iSODEM" style="background-color:skyblue" />
                </td>
                <td>@String.Format("{0:0,0}", item.dDONGIA) </td>
                <td>@String.Format("{0:0,0}", item.dTHANHTIEN) </td>
                @*<td> <a href="@Url.Action("Chitiet", "Shop", new { id = item.iMASP})"> Chi tiết </a></td>
                <td> @Html.ActionLink("Xóa", "XoaGiohang", new { @iMaSp = item.iMASP })</td>*@
                <td> <input type="submit" value="Cập Nhật" /></td>
            }
        </tr>
    }
    <tr style="font-weight: bold; text-align:right; color:red">
        <td colspan="4"> Số lượng sách: @ViewBag.Tongsoluong </td>
        <td colspan="5"> Tổng tiền: @String.Format("{0:0,0}", ViewBag.Tongtien) VNĐ </td>
    </tr>
    <tr style="font-weight: bold; color:blue; text-align:right ">
        <td colspan="9">
            @Html.ActionLink("Xóa Giỏ Hàng", "XoaTatcaGiohang")
        </td>
    </tr>
    <tr style="font-weight: bold; color:blue; text-align:right ">
        <td colspan="9" align="center">
            @Html.ActionLink("ĐẶT HÀNG", "Donhang", "THANHTOAN")
        </td>
    </tr>
</table>
